    <link rel="stylesheet" type="text/css" href="/css/{{- getVersion -}}/vendor.css">
    <link rel="stylesheet" type="text/css" href="/css/{{- getVersion -}}/app.css">

</head>
<body data-spy="scroll" data-target="#menuNavbar">
    {%- include ':source/header:index.html.twig' -%}
    <div class="wrapper">
        {%- block body -%}
        {%- endblock -%}
    </div>
    {%- include ':source/footer:index.html.twig' -%}

    <script src="/js/{{- getVersion -}}/vendor.js"></script>
    <script src="/js/{{- getVersion -}}/tr.js"></script>
    <script src="/js/{{- getVersion -}}/app.js"></script>
</body>
</html>
