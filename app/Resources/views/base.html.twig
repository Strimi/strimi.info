{# Define Routing #}
{%- set appRoute = app.request.attributes.get('_route') -%}

{# Define Full Routing #}
{%- set appRouting = app.request.schemeAndHttpHost ~ app.request.requestUri -%}

{# Define Current Locale #}
{%- set appLocale = app.request.locale -%}

{# JS/CSS Vesrion #}
{%- set getVersion = "0.0.6" -%}

<!doctype html>
<html lang="{{- locale -}}">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="google-site-verification" content="knw8bMaYtGuq0Wktw6vTVKrUZwtcwsFzSCxjGh7mReQ" />
    <meta name="googlebot" content="noodp" />
    <meta name="robots" content="index, follow, all" />
    <meta name="author" content="">
    <title>
        {%- if (appRoute == 'app_homepage') -%}
            {{- "Steem & Strimi • " }}
        {%- endif -%}
        {%- spaceless -%}
            {%- block title -%}
            {%- endblock -%}
        {%- endspaceless %}
        {% spaceless -%}
            {%- if (appRoute != 'app_homepage') -%}
                {{ " • " }}
            {%- endif -%}
            {{ "app.nameUpercaseDomain"|trans -}}
        {%- endspaceless -%}

    </title>
    <meta name="description" content="{%- spaceless -%}{%- block description -%}{%- endblock -%}{%- endspaceless -%}" />
    <meta property="og:locale" content="pl_PL" />
    <meta property="og:site_name" content="{{- "app.nameUpercaseDomain"|trans -}}"/>
    {%- block facebook -%}
        {%- spaceless -%}
            <meta property="og:title" content=""/>
            <meta property="og:image" content=""/>
            <meta property="og:description" content="" />
        {%- endspaceless -%}
    {%- endblock -%}
    <meta property="og:url" content="{{- appRouting -}}" />

    {%- spaceless -%}
        {%- block canonical -%}
            <link href="{{- appRouting -}}" rel="canonical" />
        {%- endblock -%}
    {%- endspaceless -%}

    <link rel="apple-touch-icon" sizes="57x57" href="/images/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/images/favicon/apple-icon-60x60.png">
