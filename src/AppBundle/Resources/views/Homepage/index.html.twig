{%- extends 'base.html.twig' -%}

{%- block body -%}
    {# Landing Page #}
    <div class="landing">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 text-center">
                <span class="welcome">
                    {{- 'app.homepage.landingPage.text'|trans|raw -}}
                </span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="btn-homepage">
                    <a href="//steemit.com" class="btn btn-primary" id="explore-steem" target="_blank" rel="nofollow">
                        {{- 'app.homepage.landingPage.button.explore'|trans -}}
                    </a>
                        <span class="btn btn-default menu-item" id="get-steem" data-id="exchanges">
                        {{- 'app.homepage.landingPage.button.get'|trans -}}
                    </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="mouse">
                        <div class="scroll-downs">
                            <div class="mousey">
                                <div class="scroller"></div>
                            </div>
                        </div>
                        <div class="arrow">
                            <i class="fa fa-angle-double-down" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# Join To Movement #}
    <div class="movement" id="join">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>
                        {{- 'app.homepage.movement.title'|trans -}}
                    </h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="movement-img">
                        <img src="/images/homepage/ico-paid-post-3.svg" alt="">
                    </div>
                    <div class="movement-text">
                        <span class="movement-name">
                            {{- 'app.homepage.movement.posting.title'|trans -}}
                        </span>
                        <span class="movement-info">
                            {{- 'app.homepage.movement.posting.text'|trans -}}
                        </span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="movement-img">
                        <img src="/images/homepage/ico-paid-curate-5.svg" alt="">
                    </div>
                    <div class="movement-text">
                        <span class="movement-name">
                            {{- 'app.homepage.movement.curation.title'|trans -}}
                        </span>
                        <span class="movement-info">
                            {{- 'app.homepage.movement.curation.text'|trans -}}
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="movement-img commitment">
                        <img src="/images/homepage/ico-paid-vest.svg" alt="">
                    </div>
                    <div class="movement-text commitment">
                        <span class="movement-name">
                            {{- 'app.homepage.movement.commitment.title'|trans -}}
                        </span>
                        <span class="movement-info">
                            {{- 'app.homepage.movement.commitment.text'|trans -}}
                        </span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="movement-img savings">
                        <img src="/images/homepage/ico-paid-save.svg" alt="">
                    </div>
                    <div class="movement-text savings">
                        <span class="movement-name ">
                            {{- 'app.homepage.movement.savings.title'|trans -}}
                        </span>
                        <span class="movement-info">
                            {{- 'app.homepage.movement.savings.text'|trans -}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# Video #}
    <div class="video" id="video">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>
                        {{- 'app.homepage.video.title'|trans -}}
                    </h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/xZmpCAqD7hs" frameborder="0" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# White Paper #}
    <div class="whitePaper" id="whitePaper">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>
                        {{- 'app.homepage.whitePaper.title'|trans -}}
                    </h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="whitePaperImage">
                        <img class="img-responsive" src="/images/homepage/img-wp.svg" alt="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <span class="text">
                        {{- 'app.homepage.whitePaper.text'|trans -}}
                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <a href="#" target="_blank" class="btn btn-primary">
                        {{- 'app.homepage.whitePaper.download'|trans -}}
                    </a>
                </div>
            </div>
        </div>
    </div>
    {# Exchanges #}
    <div class="exchanges" id="exchanges">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>
                        {{- 'app.homepage.exchanges.title'|trans -}}
                    </h2>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 text-center">
                    <span class="text">
                        {{- 'app.homepage.exchanges.text'|trans|raw -}}
                    </span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
                    <a class="single poloniex" href="//poloniex.com/exchange#btc_steem" target="_blank" rel="nofollow">
                        <img src="/images/exchanges/ex-polo.png" alt="">
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
                    <a class="single bitshares" href="//bitshares.openledger.info/market/OPEN.STEEM_OPEN.BTC" target="_blank" rel="nofollow">
                        <img src="/images/exchanges/ex-ol.png" alt="">
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
                    <a class="single bittrex" href="//bittrex.com/Market/Index?MarketName=BTC-STEEM" target="_blank" rel="nofollow">
                        <img src="/images/exchanges/ex-bittrex.png" alt="">
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
                    <a class="single shapeshift" href="//shapeshift.io/#/coins" target="_blank" rel="nofollow">
                        <img src="/images/exchanges/ex-shapeshift.png" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
    {# Who should Steem #}
    <div class="forWho" id="forWho">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>
                        {{- 'app.homepage.forWho.title'|trans -}}
                    </h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="singleFor">
                        <div class="singleFor-image">
                            <img src="/images/who/ico-who-2.svg" alt="">
                        </div>
                        <div class="singleFor-title">
                            {{- 'app.homepage.forWho.contentCreators.title'|trans -}}
                        </div>
                        <div class="singleFor-text">
                            {{- 'app.homepage.forWho.contentCreators.text'|trans -}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="singleFor">
                        <div class="singleFor-image">
                            <img src="/images/who/ico-who-3.svg" alt="">
                        </div>
                        <div class="singleFor-title">
                            {{- 'app.homepage.forWho.readers.title'|trans -}}
                        </div>
                        <div class="singleFor-text">
                            {{- 'app.homepage.forWho.readers.text'|trans -}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="singleFor">
                        <div class="singleFor-image">
                            <img src="/images/who/ico-who-1.svg" alt="">
                        </div>
                        <div class="singleFor-title">
                            {{- 'app.homepage.forWho.entrepreneurs.title'|trans -}}
                        </div>
                        <div class="singleFor-text">
                            {{- 'app.homepage.forWho.entrepreneurs.text'|trans -}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-lg-offset-2 col-md-4 col-md-offset-2 col-sm-6 col-xs-12">
                    <div class="singleFor">
                        <div class="singleFor-image">
                            <img src="/images/who/ico-who-4.svg" alt="">
                        </div>
                        <div class="singleFor-title">
                            {{- 'app.homepage.forWho.traders.title'|trans -}}
                        </div>
                        <div class="singleFor-text">
                            {{- 'app.homepage.forWho.traders.text'|trans|raw -}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="singleFor">
                        <div class="singleFor-image">
                            <img src="/images/who/ico-who-5.svg" alt="">
                        </div>
                        <div class="singleFor-title">
                            {{- 'app.homepage.forWho.socialMediaSites.title'|trans -}}
                        </div>
                        <div class="singleFor-text">
                            {{- 'app.homepage.forWho.socialMediaSites.text'|trans -}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# FAQ #}
    <div class="faq" id="faq">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>
                        {{- 'app.homepage.faq.title'|trans -}}
                    </h2>
                </div>
            </div>
            <div class="single-question">
                <div class="row">
                    <div class="col-lg-12">
                    <span class="question">
                        {{- 'app.homepage.faq.question_1.q'|trans -}}
                    </span>
                        <span class="answer">
                        {{- 'app.homepage.faq.question_1.a'|trans -}}
                    </span>
                    </div>
                </div>
            </div>
            <div class="single-question">
                <div class="row">
                    <div class="col-lg-12">
                        <span class="question">
                            {{- 'app.homepage.faq.question_2.q'|trans -}}
                        </span>
                        <span class="answer">
                            {{- 'app.homepage.faq.question_2.a'|trans -}}
                        </span>
                    </div>
                </div>
            </div>
            <div class="single-question">
                <div class="row">
                    <div class="col-lg-12">
                        <span class="question">
                            {{- 'app.homepage.faq.question_3.q'|trans -}}
                        </span>
                        <span class="answer">
                            {{- 'app.homepage.faq.question_3.a'|trans -}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# On Press #}
    <div class="press" id="press">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>
                        {{- 'app.homepage.press.title'|trans -}}
                    </h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <a class="pressImage" target="_blank" href="http://cointelegraph.com/news/steemit-new-social-media-platform-which-pays-you-to-post" rel="nofollow">
                        <img src="/images/press/press-coindesk.png" alt="">
                    </a>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <a class="pressImage" target="_blank" href="https://coinreport.net/steemit-rewards-social-media-content-creators-cryptocurrency/" rel="nofollow">
                        <img src="/images/press/press-coinreport.png" alt="">
                    </a>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <a class="pressImage" target="_blank" href="http://www.the-blockchain.com/2016/05/03/new-blockchain-social-media-platform-steemit-pays-post-vote-online/" rel="nofollow">
                        <img src="/images/press/press-theblkchn.png" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>

{%- endblock -%}